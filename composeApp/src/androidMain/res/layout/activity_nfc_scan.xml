<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".NfcScanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light">

        <!-- Premium Gradient Header -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/header_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_8sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Go Back" />

        <!-- Top Title & Subtitle -->
        <LinearLayout
            android:id="@+id/headerTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                tools:text="Devisoft"/>

        </LinearLayout>

        <!-- Logo Container (Transparent) - Increased Size -->
        <FrameLayout
            android:id="@+id/cardLogo"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivNfcLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:src="@drawable/sita_logo" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:text="Ready to Scan\nTap the logo and bring card close"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/_12ssp"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardLogo" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMemberInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="cardMemberDetails,cardTransaction"
            tools:visibility="visible" />

        <!-- Member Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMemberDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvInstruction"
            app:strokeColor="@color/divider_color"
            app:strokeWidth="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member Verified"
                        android:textColor="@color/status_green"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/status_green"
                        android:backgroundTint="@color/status_green" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/divider_color" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!-- ID Row -->
                    <TextView
                        android:text="Member ID"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/text_secondary"
                        android:layout_columnWeight="1" />
                    
                    <TextView
                        android:id="@+id/tvMemberId"
                        android:text="--"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_columnWeight="1" />

                    <!-- Name Row -->
                    <TextView
                        android:text="Company Name"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_columnWeight="1" />

                    <TextView
                        android:id="@+id/tvMemberName"
                        android:text="--"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_columnWeight="1" />

                    <!-- Validity Row -->
                    <TextView
                        android:text="Expiry Date"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_columnWeight="1" />

                    <TextView
                        android:id="@+id/tvValidUpto"
                        android:text="--"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_columnWeight="1" />
                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Transaction Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_3sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardMemberDetails"
            app:layout_constraintVertical_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice Amount"
                    android:textColor="@color/sita_blue"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilInvoiceAmount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Enter Amount"
                    app:boxCornerRadiusBottomEnd="@dimen/_6sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_6sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_6sdp"
                    app:boxCornerRadiusTopStart="@dimen/_6sdp"
                    app:prefixText="Rs. "
                    app:prefixTextColor="@color/sita_blue"
                    app:hintTextColor="@color/sita_blue"
                    app:boxStrokeColor="@color/sita_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInvoiceAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_8sdp"
                        android:text="Reset"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1.5"
                        android:padding="@dimen/_8sdp"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/sita_blue"
                        app:cornerRadius="@dimen/_6sdp"
                        app:elevation="@dimen/_4sdp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
